<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Nov 15, 2025"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvSymptomLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level 3"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FF9800"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp"
                android:background="@android:drawable/dialog_holo_light_frame"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvSymptomDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moderate symptoms"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvSymptomsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Symptoms:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacing="4dp"/>

        <TextView
            android:id="@+id/tvTriggersLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Triggers:"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupTriggers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:chipSpacing="4dp"/>

        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notes: Felt better after using rescue inhaler"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvEnteredBy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Entered by: Parent"
            android:textSize="12sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp"
            android:gravity="end"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
