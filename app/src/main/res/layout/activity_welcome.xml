<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient_primary"
    android:padding="32dp"
    tools:context=".main.WelcomeActivity">

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toTopOf="@+id/tvWelcomeAppName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/tvWelcomeAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_app_name"
        android:textSize="36sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toTopOf="@+id/tvWelcomeBlurb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tvWelcomeBlurb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome_blurb"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#E3F2FD"
        android:lineSpacingExtra="4dp"
        app:layout_constraintBottom_toTopOf="@+id/cardActions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeAppName"
        android:layout_marginBottom="48dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <Button
                android:id="@+id/btnJoinAsParent"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/join_as_parent"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnJoinAsProvider"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="@string/join_as_provider"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                app:strokeColor="#1565C0"
                app:strokeWidth="2dp"
                android:textColor="#1565C0"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnJoinAsChild"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Join as Child"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                app:strokeColor="#1565C0"
                app:strokeWidth="2dp"
                android:textColor="#1565C0"
                android:layout_marginBottom="24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already have an account? "
                    android:textColor="#757575"/>

                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:padding="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
