<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFAFA">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Provider Report"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1976D2" />

        <TextView
            android:id="@+id/tvChildName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Child Name"
            android:textSize="16sp"
            android:textColor="#757575"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- Date Range Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="#FFFFFF"
        android:layout_margin="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report Period:"
            android:textSize="14sp"
            android:textColor="#424242" />

        <Spinner
            android:id="@+id/spinnerDateRange"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:entries="@array/report_date_ranges" />

    </LinearLayout>

    <!-- TODO: Scrollable content area with charts -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- TODO: Rescue Frequency Chart (Time-series) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rescue Inhaler Usage (7 days)"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <!-- TODO: Add chart view (MPAndroidChart or similar) -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:text="[ðŸ“ˆ Time-series chart - rescue frequency over time]"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- TODO: Controller Adherence Percentage -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Controller Adherence"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <!-- TODO: Circular progress or donut chart -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="[ðŸŸ¡ Adherence %]"
                            android:textColor="#9E9E9E" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Days Completed:"
                                android:textSize="12sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/tvAdherenceDays"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="18 / 20"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#2E7D32"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- TODO: Zone Distribution (Pie/Bar Chart) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Peak Flow Zone Distribution"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <!-- TODO: Add pie/bar chart view -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center"
                        android:text="[ðŸ“Š Pie chart - Green/Yellow/Red zone proportions]"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="16dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- TODO: Symptom Burden (Days with issues) -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Symptom Burden"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Problem Days"
                                android:textSize="12sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/tvProblemDays"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5 days"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#C62828"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Night Waking"
                                android:textSize="12sp"
                                android:textColor="#757575" />

                            <TextView
                                android:id="@+id/tvNightWaking"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="3 nights"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#1565C0"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- TODO: Triage Incidents (if shared) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTriageIncidents"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Notable Triage Incidents"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#880E4F" />

                    <TextView
                        android:id="@+id/tvTriageList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TODO: List recent triage incidents with escalation details"
                        android:textSize="13sp"
                        android:textColor="#9E9E9E"
                        android:layout_marginTop="12dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Export/Share Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportPDF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¥ Export as PDF"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_margin="16dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
