<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#E3F2FD"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŒ¬ï¸"
                    android:textSize="48sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blow into your meter!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="What's your number today?"
                    android:textSize="16sp"
                    android:textColor="#546E7A"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Input Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/cardHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/etPEFValue"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="000"
                    android:inputType="number"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:textColor="#37474F"
                    android:maxLength="3"/>

                <View
                    android:layout_width="180dp"
                    android:layout_height="2dp"
                    android:background="#CFD8DC"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L/min"
                    android:textSize="16sp"
                    android:textColor="#90A4AE"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Zone Result Card (Hidden initially) -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardZoneDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toBottomOf="@id/cardInput">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvZoneEmoji"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŸ¢"
                    android:textSize="48sp"/>

                <TextView
                    android:id="@+id/tvZoneResult"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Green Zone!"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvZoneGuidance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Great job! Keep it up!"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Context Selection -->
        <TextView
            android:id="@+id/tvContextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="When did you check?"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#37474F"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardZoneDisplay"/>

        <LinearLayout
            android:id="@+id/layoutContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvContextLabel">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPreMed"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’Š"
                        android:textSize="24sp"/>
                    
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Before Meds"
                        android:textStyle="bold"
                        android:textColor="#546E7A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardPostMed"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âœ¨"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="After Meds"
                        android:textStyle="bold"
                        android:textColor="#546E7A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Hidden RadioGroup for logic compatibility -->
        <RadioGroup
            android:id="@+id/rgMedicationContext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <RadioButton android:id="@+id/rbNoContext" android:checked="true"/>
            <RadioButton android:id="@+id/rbPreMedication"/>
            <RadioButton android:id="@+id/rbPostMedication"/>
        </RadioGroup>

        <!-- Notes (Collapsible/Simple) -->
        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add a note (optional)..."
            android:background="@drawable/bg_rounded_input"
            android:padding="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/layoutContext"/>

        <!-- Action Buttons -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Reading"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/etNotes"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/btnSave"/>

        <!-- PB Warning -->
        <TextView
            android:id="@+id/tvPBWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Ask a parent to set your Personal Best!"
            android:gravity="center"
            android:textColor="#F57C00"
            android:background="#FFF3E0"
            android:padding="8dp"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnCancel"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
