<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Streaks &amp; Badges"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Track your progress and earn achievements"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Streaks Section -->
        <TextView
            android:id="@+id/tvStreaksTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ”¥ Current Streaks"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Controller Streak Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardControllerStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E8F5E9"
            app:layout_constraintTop_toBottomOf="@id/tvStreaksTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’Š Controller Medication Streak"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

                <TextView
                    android:id="@+id/tvControllerStreak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 days"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"
                    android:gravity="center"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvControllerLongest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longest: 0 days"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Technique Streak Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardTechniqueStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E3F2FD"
            app:layout_constraintTop_toBottomOf="@id/cardControllerStreak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š Technique Practice Streak"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"/>

                <TextView
                    android:id="@+id/tvTechniqueStreak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 days"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"
                    android:gravity="center"
                    android:layout_marginTop="12dp"/>

                <TextView
                    android:id="@+id/tvTechniqueLongest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Longest: 0 days"
                    android:textSize="14sp"
                    android:textColor="#757575"
                    android:gravity="center"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Badges Section -->
        <TextView
            android:id="@+id/tvBadgesTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ðŸ† Badges"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/cardTechniqueStreak"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Badges RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBadges"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvBadgesTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Settings Button -->
        <Button
            android:id="@+id/btnSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="âš™ï¸ Badge Settings"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:paddingVertical="16dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/rvBadges"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Close Button -->
        <Button
            android:id="@+id/btnClose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textSize="16sp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:paddingVertical="16dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnSettings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
