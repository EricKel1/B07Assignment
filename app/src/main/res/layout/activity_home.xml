<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="SMART AIR"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#1976D2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnNotifications"/>

        <ImageButton
            android:id="@+id/btnNotifications"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_popup_reminder"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Notifications" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Track your asthma journey"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvWelcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardRescueInhaler"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E3F2FD"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Medicine Logging"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1565C0"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log rescue inhaler or controller medicine"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#424242"/>

                <Button
                    android:id="@+id/btnLogRescueInhaler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log Medicine"
                    android:textSize="16sp"
                    android:backgroundTint="#1976D2"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="12dp"/>

                <Button
                    android:id="@+id/btnViewHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View History"
                    android:textSize="16sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginTop="8dp"
                    android:paddingVertical="12dp"/>

                <Button
                    android:id="@+id/btnInventory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage Inventory"
                    android:textSize="16sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginTop="8dp"
                    android:paddingVertical="12dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSymptomCheckIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFF3E0"
            app:layout_constraintTop_toBottomOf="@id/cardRescueInhaler"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Symptom Check-In"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#E65100"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track how you're feeling each day"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#424242"/>

                <Button
                    android:id="@+id/btnDailyCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daily Check-In"
                    android:textSize="16sp"
                    android:backgroundTint="#FF9800"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="12dp"/>

                <Button
                    android:id="@+id/btnViewSymptomHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View History"
                    android:textSize="16sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginTop="8dp"
                    android:paddingVertical="12dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardSafetyMonitoring"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFEBEE"
            app:layout_constraintTop_toBottomOf="@id/cardSymptomCheckIn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Safety &amp; Monitoring"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#C62828"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track your peak flow and get help when needed"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#424242"/>

                <!-- Zone Display Widget -->
                <LinearLayout
                    android:id="@+id/layoutZoneDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:background="@android:color/white"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Zone:"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvCurrentZone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No data yet"
                        android:textSize="14sp"
                        android:layout_marginStart="8dp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/tvZonePercentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="12sp"
                        android:layout_marginStart="8dp"
                        android:textColor="#757575"/>

                </LinearLayout>

                <Button
                    android:id="@+id/btnEmergencyTriage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Having Trouble Breathing?"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="#D32F2F"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="16dp"/>

                <Button
                    android:id="@+id/btnEnterPEF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter Peak Flow (PEF)"
                    android:textSize="16sp"
                    android:backgroundTint="#E53935"
                    android:layout_marginTop="8dp"
                    android:paddingVertical="12dp"/>

                <Button
                    android:id="@+id/btnViewIncidents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Incident History"
                    android:textSize="16sp"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_marginTop="8dp"
                    android:paddingVertical="12dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardInhalerTechnique"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#E8F5E9"
            app:layout_constraintTop_toBottomOf="@id/cardSafetyMonitoring"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inhaler Technique Helper"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#2E7D32"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Learn the proper way to use your inhaler with step-by-step guidance"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#424242"/>

                <Button
                    android:id="@+id/btnInhalerTechnique"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Technique Guide"
                    android:textSize="16sp"
                    android:backgroundTint="#4CAF50"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="12dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTriggerPatterns"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#F3E5F5"
            app:layout_constraintTop_toBottomOf="@id/cardInhalerTechnique"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Trigger Patterns"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#6A1B9A"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="See what environmental factors trigger your symptoms"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#424242"/>

                <Button
                    android:id="@+id/btnViewPatterns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Patterns"
                    android:textSize="16sp"
                    android:backgroundTint="#9C27B0"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="12dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMotivation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="#FFF9C4"
            app:layout_constraintTop_toBottomOf="@id/cardTriggerPatterns"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Streaks &amp; Badges"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#F57F17"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Track your progress and earn achievements"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#424242"/>

                <Button
                    android:id="@+id/btnMotivation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View Streaks &amp; Badges"
                    android:textSize="16sp"
                    android:backgroundTint="#FBC02D"
                    android:layout_marginTop="16dp"
                    android:paddingVertical="12dp"/>

                <Button
                    android:id="@+id/btnStatisticsReports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Statistics &amp; Reports"
                    android:textSize="16sp"
                    android:backgroundTint="#1976D2"
                    android:layout_marginTop="8dp"
                    android:paddingVertical="12dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:backgroundTint="#757575"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/cardMotivation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
