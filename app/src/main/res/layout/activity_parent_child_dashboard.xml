<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/header_background_gradient"
                android:orientation="vertical"
                android:padding="32dp"
                android:paddingTop="32dp">


                <!-- Horizontal row for back button and child name -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnBack4"
                        android:layout_width="45dp"
                        android:layout_height="40dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Back"
                        android:src="@android:drawable/ic_menu_close_clear_cancel"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/tvChildNameHeader"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Child Name"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvCurrentZoneHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Current Zone: Loading..."
                    android:textColor="#E0E0E0"
                    android:textSize="16sp" />

            </LinearLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Quick Actions Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quick Actions"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- Log Medicine -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardLogMedicine"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E3F2FD">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">
                            
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Log\nMedicine"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#1565C0"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/badgeLogMedicine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared with Provider"
                            android:textSize="10sp"
                            android:textColor="#1565C0"
                            android:background="@drawable/bg_shared_badge"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <!-- Daily Check-in -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardDailyCheckIn"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E8F5E9">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Daily\nCheck-in"
                                android:textAlignment="center"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#2E7D32"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/badgeDailyCheckIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared with Provider"
                            android:textSize="10sp"
                            android:textColor="#2E7D32"
                            android:background="@drawable/bg_shared_badge"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardEnterPEF"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF3E0">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="24dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enter Peak Flow (PEF)"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#EF6C00"/>
                        
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+"
                            android:textSize="24sp"
                            android:textColor="#EF6C00"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/badgeEnterPEF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shared with Provider"
                        android:textSize="10sp"
                        android:textColor="#EF6C00"
                        android:background="@drawable/bg_shared_badge"
                        android:layout_gravity="top|end"
                        android:layout_margin="4dp"
                        android:visibility="gone"/>
                </FrameLayout>
            </androidx.cardview.widget.CardView>

            <!-- Analytics Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Analytics &amp; Reports"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Adherence Card (New) -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardAdherence"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Medication Adherence (Last 30 Days)"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#455A64"/>

                            <ImageView
                                android:id="@+id/btnConfigureSchedule"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@android:drawable/ic_menu_manage"
                                app:tint="#757575"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackgroundBorderless"/>
                        </LinearLayout>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvAdherenceCalendar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:overScrollMode="never"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:gravity="center">
                            
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_calendar_day"
                                android:backgroundTint="#4CAF50"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Good"
                                android:textSize="10sp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="12dp"/>

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_calendar_day"
                                android:backgroundTint="#FFC107"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Partial"
                                android:textSize="10sp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="12dp"/>

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:background="@drawable/bg_calendar_day"
                                android:backgroundTint="#F44336"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Missed"
                                android:textSize="10sp"
                                android:layout_marginStart="4dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvAdherenceDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No schedule configured"
                            android:textSize="12sp"
                            android:textColor="#757575"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">
                            
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Statistics &amp; Reports"
                                android:textSize="16sp"
                                android:textColor="#455A64"/>
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VIEW"
                                android:textStyle="bold"
                                android:textColor="#1976D2"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/badgeStats"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared with Provider"
                            android:textSize="10sp"
                            android:textColor="#1976D2"
                            android:background="@drawable/bg_shared_badge"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardPatterns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Trigger Patterns"
                                android:textSize="16sp"
                                android:textColor="#455A64"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VIEW"
                                android:textStyle="bold"
                                android:textColor="#1976D2"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/badgePatterns"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared with Provider"
                            android:textSize="10sp"
                            android:textColor="#1976D2"
                            android:background="@drawable/bg_shared_badge"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- History Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History Logs"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#37474F"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHistoryMedicine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Medicine History"
                            android:textSize="15sp"
                            android:textColor="#455A64"/>

                        <TextView
                            android:id="@+id/badgeHistoryMedicine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared with Provider"
                            android:textSize="10sp"
                            android:textColor="#455A64"
                            android:background="@drawable/bg_shared_badge"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHistoryCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Daily Check-in History"
                            android:textSize="15sp"
                            android:textColor="#455A64"/>

                        <TextView
                            android:id="@+id/badgeHistoryCheckIn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared with Provider"
                            android:textSize="10sp"
                            android:textColor="#455A64"
                            android:background="@drawable/bg_shared_badge"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHistoryPEF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Peak Flow History"
                            android:textSize="15sp"
                            android:textColor="#455A64"/>

                        <TextView
                            android:id="@+id/badgeHistoryPEF"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared with Provider"
                            android:textSize="10sp"
                            android:textColor="#455A64"
                            android:background="@drawable/bg_shared_badge"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardHistoryIncidents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:text="Incident History"
                            android:textSize="15sp"
                            android:textColor="#455A64"/>

                        <TextView
                            android:id="@+id/badgeHistoryIncidents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shared with Provider"
                            android:textSize="10sp"
                            android:textColor="#455A64"
                            android:background="@drawable/bg_shared_badge"
                            android:layout_gravity="top|end"
                            android:layout_margin="4dp"
                            android:visibility="gone"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>